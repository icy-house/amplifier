{
  "functions": {
    "source": ".",
    "runtime": "nodejs18"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/auth/success",
        "destination": "/auth-success.html"
      },
      {
        "source": "/auth.html",
        "destination": "/auth.html"
      }
    ]
  }
}
